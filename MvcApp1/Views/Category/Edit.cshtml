@model Category

<form asp-controller="Category" asp-action="Edit" method="post">
    <input hidden asp-for="Id" />

    <div class="container">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Edit Category</h2>
            </div>
        </div>

        <div class="row pt-4">
            <div asp-validation-summary="All"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>

        </div>

        <div class="row pt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Confirm Changes</button>
            </div>

            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">
                    Back to List
                </a>
            </div>
        </div>
</form>

@* client side validations *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
} 